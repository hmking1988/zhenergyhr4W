<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m" controllerName="com.zhenergy.hr.view.personalinfo.PeopleData" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="个人数据"  showNavButton="{device>/isPhone}" navButtonPress="back" showFooter="{device>/isPhone}">
		<content>
		<List
		    class="listclass"
			id="list"
			mode="{device>/listMode}"
			select="handleListSelect"
			>
			<CustomListItem type="Inactive">
			
		    <!--<HBox width="100%">-->
      <!--      <VBox width="40%" direction="Column" >-->
      <!--         <Text class="text" text="员工号" width="100%" textAlign="Right"/>-->
      <!--      </VBox>-->
      <!--      <VBox width="60%" >-->
      <!--          <Text text="{Pernr}" maxLines="0" textAlign="Left" class="vbox_text02"></Text>-->
      <!--      </VBox>-->
      <!--      </HBox>-->
            
            <HBox width="100%">
            <VBox width="40%" direction="Column" >
               <Text class="text" text="姓名" width="100%" textAlign="Right"/>
            </VBox>
            <VBox width="60%" >
                <Text text="{Name}" maxLines="0" textAlign="Left" class="vbox_text02"></Text>
            </VBox>
            </HBox>
            
            <HBox width="100%">
            <VBox width="40%" direction="Column" >
               <Text class="text" text="姓名全拼" width="100%" textAlign="Right"/>
            </VBox>
            <VBox width="60%" >
                <Text text="{NameSpell}" maxLines="0" textAlign="Left" class="vbox_text02"></Text>
            </VBox>
            </HBox>
            
            <HBox width="100%">
            <VBox width="40%" direction="Column" >
               <Text class="text" text="人事范围" width="100%" textAlign="Right"/>
            </VBox>
            <VBox width="60%" >
                <Text text="{PersonalArea}" maxLines="0" textAlign="Left" class="vbox_text02"></Text>
            </VBox>
            </HBox>
            
            <HBox width="100%">
            <VBox width="40%" direction="Column" >
               <Text class="text" text="人事子范围" width="100%" textAlign="Right"/>
            </VBox>
            <VBox width="60%" >
                <Text text="{PersonalSubarea}" maxLines="0" textAlign="Left" class="vbox_text02"></Text>
            </VBox>
            </HBox>
            
            <HBox width="100%">
            <VBox width="40%" direction="Column" >
               <Text class="text" text="岗位" width="100%" textAlign="Right"/>
            </VBox>
            <VBox width="60%" >
                <Text text="{Position}" maxLines="0" textAlign="Left" class="vbox_text02"></Text>
            </VBox>
            </HBox>
            
            <HBox width="100%">
            <VBox width="40%" direction="Column" >
               <Text class="text" text="性别" width="100%" textAlign="Right"/>
            </VBox>
            <VBox width="60%" >
                <Text text="{Gender}" maxLines="0" textAlign="Left" class="vbox_text02"></Text>
            </VBox>
            </HBox>
            
            <HBox width="100%">
            <VBox width="40%" direction="Column" >
               <Text class="text" text="生日" width="100%" textAlign="Right"/>
            </VBox>
            <VBox width="60%" >
                <Text text="{Birthday}" maxLines="0" textAlign="Left" class="vbox_text02"></Text>
            </VBox>
            </HBox>
	        
	        <HBox width="100%">
            <VBox width="40%" direction="Column" >
               <Text class="text" text="国籍" width="100%" textAlign="Right"/>
            </VBox>
            <VBox width="60%" >
                <Text text="{Nationality}" maxLines="0" textAlign="Left" class="vbox_text02"></Text>
            </VBox>
            </HBox>
            
            <HBox width="100%">
            <VBox width="40%" direction="Column" >
               <Text class="text" text="籍贯" width="100%" textAlign="Right"/>
            </VBox>
            <VBox width="60%" >
                <Text text="{NativePlace}" maxLines="0" textAlign="Left" class="vbox_text02"></Text>
            </VBox>
            </HBox>
            
            <HBox width="100%">
            <VBox width="40%" direction="Column" >
               <Text class="text" text="婚姻状况" width="100%" textAlign="Right"/>
            </VBox>
            <VBox width="60%" >
                <Text text="{Marriage}" maxLines="0" textAlign="Left" class="vbox_text02"></Text>
            </VBox>
            </HBox>
            
            <HBox width="100%">
            <VBox width="40%" direction="Column" >
               <Text class="text" text="子女数目" width="100%" textAlign="Right"/>
            </VBox>
            <VBox width="60%" >
                <Text text="{Children}" maxLines="0" textAlign="Left" class="vbox_text02"></Text>
            </VBox>
            </HBox>


        
        </CustomListItem>
		</List>
		</content>
        <footer>
            <Toolbar>
                <content>
                <!--<ToolbarSpacer/>-->
                <Button icon="sap-icon://home" press="back1"></Button>
                </content>
            </Toolbar>
        </footer>
	</Page>
</core:View>